@model IEnumerable<FPJobBoard.Data.EF.Location>

@{
    /**/

    ViewBag.Title = "Locations";
}

<div class="custom-container">
    <h2 id="ScrollDivID">@ViewBag.Title</h2>
    <hr />
    @if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create", "Locations", new { divId="ScrollDivID"}, new { @class = "btn btn-outline-success" })
        </p>
    }
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StoreNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserDetail.FullName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDetail.FullName)
                    </td>
                    <td>

                        @Html.ActionLink("Details", "Details", new { id = item.LocationID, divId="ScrollDivID" }, new { @class = "btn btn-outline-primary" })

                        @if (User.IsInRole("Admin"))
                        {
                            @:| @Html.ActionLink("Edit", "Edit", new { id = item.LocationID, divId="ScrollDivID" }, new { @class = "btn btn-outline-warning" })
                            @:| @Html.ActionLink("Delete", "Delete", new { id = item.LocationID, divId="ScrollDivID" }, new { @class = "btn btn-outline-danger" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
    @section scripts{
        <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });

        </script>
    }
