@model FPJobBoard.Data.EF.Location

@{
    ViewBag.Title = "Delete";
}

<h2 id="ScrollDivID">Delete</h2>

<div id="profileContainer">
    <div id="profileHeader">
        <h3>@Html.DisplayFor(model => model.StoreNumber)</h3>
    </div>
    <div class="clearfix"></div>
    <div id="profileLeft">
        <fieldset>
            <legend>Store Number</legend>
            <p>
                @Html.DisplayFor(model => model.StoreNumber)
            </p>
        </fieldset>
        <fieldset>
            <legend>Manager</legend>
            <p>
                @Html.DisplayFor(model => model.UserDetail.FullName)
            </p>
        </fieldset>
    </div>
    <div id="profileRight">
        <fieldset>
            <legend>City</legend>
            <p>
                @Html.DisplayFor(model => model.City)
            </p>
        </fieldset>
        <fieldset>
            <legend>State</legend>
            <p>
                @Html.DisplayFor(model => model.State)
            </p>
        </fieldset>
    </div>
    <div class="clearfix"></div>
    <div id="profileFooterLeft">
        @Html.ActionLink("Back to List", "Index", "Locations", new { divId="ScrollDivID"}, new { @class="btn btn-outline-primary"})
    </div>
    <div id="profileFooterRight">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-outline-danger" />           
        }
    </div>
    <div class="clearfix"></div>
</div>
