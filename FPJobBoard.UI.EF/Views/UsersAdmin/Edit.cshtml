@model FPJobBoard.UI.EF.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit User Role";
}

<h2 id="ScrollDivID">@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)

    <div id="profileContainer">
        <div class="clearfix"></div>
        <div id="profileLeft">
            <fieldset>
                <legend>User Email</legend>
                <p>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </p>
            </fieldset>
        </div>
        <div id="profileRight">
            <fieldset>
                <legend>Role</legend>
                <p>
                    @Html.Label("Roles", new { @class = "control-label col-md-2" })
                    @foreach (var item in Model.RolesList)
                    {
                        <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                        @Html.Label(item.Value, new { @class = "control-label" })
                    }
                </p>
            </fieldset>
        </div>
        <div class="clearfix"></div>
        <div id="profileFooterLeft">
            @Html.ActionLink("Back to List", "Index", "UsersAdmin", new { divId="ScrollDivID"}, new { @class="btn btn-outline-primary"})
        </div>
        <div id="profileFooterRight">
            <input type="submit" value="Save" class="btn btn-outline-warning" />
        </div>
        <div class="clearfix"></div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
