@model FPJobBoard.UI.EF.Models.RoleViewModel

@{
    ViewBag.Title = "Edit Roles";
}

<h2 id="ScrollDivID">@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)

    <div id="profileContainer">
        <div class="clearfix"></div>
        <div id="profileCenter">
            <fieldset>
                <legend>Role</legend>
                <p>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </p>
            </fieldset>
        </div>
        <div class="clearfix"></div>
        <div id="profileFooterLeft">
            @Html.ActionLink("Back to List", "Index", "RolesAdmin", new { divId="ScrollDivID"}, new { @class="btn btn-outline-primary"})
        </div>
        <div id="profileRight">
            <input type="submit" value="Save" class="btn btn-outline-warning" />
        </div>
        <div class="clearfix"></div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
