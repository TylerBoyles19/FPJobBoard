@model FPJobBoard.Data.EF.Position

@{
    ViewBag.Title = "Add New Position";
}

<h2 id="ScrollDivID">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="profileContainer">
        <div class="clearfix"></div>
        <div id="profileLeft">
            <fieldset>
                <legend>Position</legend>
                <p>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </p>
            </fieldset>
        </div>
        <div id="profileRight">
            <fieldset>
                <legend>Job Description</legend>
                <p>
                    @Html.EditorFor(model => model.JobDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.JobDescription, "", new { @class = "text-danger" })
                </p>
            </fieldset>
        </div>
        <div class="clearfix"></div>
        <div id="profileFooterLeft">
            @Html.ActionLink("Back to List", "Index", "Positions", new { divId="ScrollDivID"}, new { @class="btn btn-outline-primary"})
        </div>
        <div id="profileFooterRight">
            <input type="submit" value="Add" class="btn btn-outline-success" />
        </div>
        <div class="clearfix"></div>
    </div>
}

